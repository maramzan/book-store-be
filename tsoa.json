{
  "entryFile": "./src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "./src/controllers/**/*.ts"
  ],
  "spec": {
    "outputDirectory": "./src/swagger",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "./src/routes"
  },
  "securityDefinitions": {
    "jwt": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}